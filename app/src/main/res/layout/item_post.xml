<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/postItemCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="H,1:1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="224dp">

            <ImageView
                android:id="@+id/itemPostMainImage"
                android:scaleType="centerCrop"
                android:background="@drawable/sample_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:background="@drawable/item_post_profile_background_ring"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


            <ImageView
                android:id="@+id/itemPostProfileImage"
                android:background="@drawable/icon_otter"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="17dp"
                android:layout_width="38dp"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/itemPostUserIdTextView"
                android:text="hello"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/bm_jua"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/itemPostTitleTextView"
                android:text="hello world"
                android:textSize="24sp"
                android:fontFamily="@font/bm_jua"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="28dp"/>

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/itemPostTwoLineDescriptionTextView"
                android:text="hello world"
                android:textSize="15sp"
                android:fontFamily="@font/nanum_myeongjo"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
